a=int(input("enter the number"))
b=int(input("enter the number"))
print("1-addtion")
print("2-subtraction")
print("3-multiplication")
print("4-division")
c=int(input("enter the number:"))
if c==1:
    print(a+b)
elif c==2:
    print(a-b)
elif c==3:
    print(a*b)
elif c==4:
    print(a%b)
else:
    print("enter the valid number")
